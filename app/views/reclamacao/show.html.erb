<h3>Visualizar Reclamação</h3>
<hr>
<%= form_with html:{class:"form", role:"form"}, method:'get', scope: :reclamacao, url:reclamacao_index_path, local: true do |form| %>

    <div class="form-row">
        <div class="form-group col-md-6">
            <%= form.label :nome %>
            <%= form.text_field :nome, class: 'form-control', :readonly => true %>
        </div>
        <div class="form-group col-md-2">
            <%= form.label :cep %>
            <%= form.text_field :cep, class: 'form-control', :readonly => true %>
        </div>
        <div class="form-group col-md-4">
            <%= form.label :email %>
            <%= form.text_field :email, class: 'form-control', :readonly => true %>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <%= form.label :telefone %>
            <%= form.text_field :telefone, class: 'form-control', :readonly => true %>
        </div>

        <div class="form-group col-md-4">
            <%= form.label "Código Pedido" %>
            <%= form.text_field :cod_pedido, class: 'form-control', :readonly => true %>
        </div>

        <div class="form-group col-md-4">
            <%= form.label :suspeito %>
            <%= form.text_field :suspeito, class: 'form-control', :readonly => true %>
        </div>
    </div>

    <div class="form-group">
        <%= form.label :título %>
        <%= form.text_field :titulo, class: 'form-control', :readonly => true %>
    </div>

    <div class="form-group">
        <%= form.label :reclamação %><br>
        <%= form.text_area :descricao,  class:'form-control', :readonly => true %>    
    </div>   

<% end %>